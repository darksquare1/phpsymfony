{% extends 'base.html.twig' %}

{% block title %}Проект{% endblock %}

{% block body %}
    <h1>Проект</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ project.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ project.name }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ project.createdAt ? project.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>UpdatedAt</th>
            <td>{{ project.updatedAt ? project.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        {% if project.tasks | length > 0 %}
            <tr>
                <th>Список задач:</th>
            </tr>
            {% for task in project.tasks %}
                <tr>
                    <td><a href="{{ path('app_task_show', {'id': task.id}) }}">{{ task.name }}</a></td>
                </tr>
            {% endfor %}
        {% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_project_index') }}">Вернуться к списку проектов</a>

    <a href="{{ path('app_project_edit', {'id': project.id}) }}">Редактировать</a>

    {{ include('project/_delete_form.html.twig') }}
{% endblock %}
